<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:background="#ff993300"
        android:gravity="center_horizontal"
        android:text="야구 볼 카운트 맞추기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupA"
        android:layout_width="86dp"
        android:layout_height="88dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/radioGroupB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView">

        <RadioButton
            android:id="@+id/radioButtonAb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ball" />

        <RadioButton
            android:id="@+id/radioButtonAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="strike" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupB"
        android:layout_width="81dp"
        android:layout_height="89dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/radioGroupC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioGroupA"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView">

        <RadioButton
            android:id="@+id/radioButtonBb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ball" />

        <RadioButton
            android:id="@+id/radioButtonBs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="strike" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupC"
        android:layout_width="79dp"
        android:layout_height="89dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radioGroupB"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView">

        <RadioButton
            android:id="@+id/radioButtonCb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ball" />

        <RadioButton
            android:id="@+id/radioButtonCs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="strike" />
    </RadioGroup>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="결과 확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="첫 번째 볼"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupA" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="두 번째 볼"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupB" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="세 번째 볼"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupC" />

</androidx.constraintlayout.widget.ConstraintLayout>